                           Text="Bases de datos I - 2017"/>
                <TextBlock x:Name="ContentProyecto" Style="{StaticResource ContentTextStyle}" 
                           Text="Primer semestre - Proyecto Final"/>
                <TextBlock x:Name="ContentIntegrantes" Style="{StaticResource ContentTextStyle}">
                    <Run Text="Integrantes:" />
                    <LineBreak />
                    <Run Text="     Pablo Brenes" />
                    <LineBreak/>
                    <Run Text="     Jeison Esquivel" />
                    <LineBreak/>
                    <Run Text="     David Valverde" />
                </TextBlock>

            </StackPanel>

        </ScrollViewer>
    </Grid>

</navigation:Page>